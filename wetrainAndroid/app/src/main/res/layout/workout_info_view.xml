<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/workout_description_bg"
    android:gravity="center"
    android:padding="@dimen/activity_horizontal_margin">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">
        <TextView
            android:id="@+id/workout_info_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="@dimen/workout_info__txt_size"
            android:background="@drawable/alert_dialog_rounded_drawable"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:padding="@dimen/activity_horizontal_margin"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center|top">
        <ImageView
            android:id="@+id/workout_icon_img"
            android:layout_width="@dimen/workout_icon_img_size"
            android:layout_height="@dimen/workout_icon_img_size"
            android:scaleType="fitCenter"/>
    </LinearLayout>


</LinearLayout>