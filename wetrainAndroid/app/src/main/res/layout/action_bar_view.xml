<?xml version="1.0" encoding="utf-8"?>
<com.wetrain.client.customviews.CustomActionBar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_bar_lyt"
    android:layout_width="match_parent"
    android:layout_height="@dimen/action_bar_height"
    android:fitsSystemWindows="true"
    android:orientation="horizontal">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">
        <Button
            android:id="@+id/actionbar_back_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="left|center"
            android:textSize="@dimen/very_small_text_size"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:textAllCaps="false"
            android:drawablePadding="7dp"/>

        <TextView
            android:id="@+id/actionbar_title_txt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:singleLine="true"
            android:textSize="@dimen/small_text_size"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_centerInParent="true"/>

        <Button
            android:id="@+id/actionbar_options_btn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right|center"
            android:visibility="gone"
            android:background="@null"
            android:paddingRight="@dimen/small_padding_size"
            android:textAllCaps="false"
            android:textSize="@dimen/very_small_text_size"/>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/avail_trainer_count_lyt"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_width="@dimen/action_bar_height"
            android:layout_height="@dimen/action_bar_height"
            android:padding="5dp"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="23dp"
                android:src="@drawable/trainer_count_status_icon"
                android:layout_marginRight="@dimen/medium_padding_size"
                android:layout_marginTop="2dp"/>
            <TextView
                android:id="@+id/avail_trainer_count_txt_label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="@dimen/small_text_size"
                android:gravity="center"
                android:layout_gravity="center"/>
        </LinearLayout>


    </FrameLayout>



</com.wetrain.client.customviews.CustomActionBar>