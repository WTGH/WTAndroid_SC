<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/workout_desc_height"
        android:paddingLeft="@dimen/medium_padding_size"
        android:paddingRight="@dimen/medium_padding_size"
        android:background="#5950df9d">


        <TextView
            android:id="@+id/workout_type_header_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/medium_padding_size"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:textStyle="bold"
            android:textSize="@dimen/workout_desc_title_txt_size"/>


        <ImageView
            android:id="@+id/workout_type_img"
            android:layout_width="@dimen/workout_desc_icon_width"
            android:layout_height="@dimen/workout_desc_icon_width"
            android:layout_marginTop="@dimen/medium_padding_size"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/workout_type_header_txt"
            android:layout_gravity="center"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/contentdescription_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="@dimen/workout_desc_subtitle_txt_size"
            android:layout_below="@id/workout_type_header_txt"
            android:layout_margin="@dimen/medium_padding_size"
            android:fadeScrollbars="false"
            android:scrollbars="none"
            android:layout_centerVertical="true"/>

    </RelativeLayout>







</RelativeLayout>