<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:gravity="center">


    <ImageView
        android:id="@+id/trainer_avator_img"
        android:layout_width="@dimen/trainer_img_height"
        android:layout_height="@dimen/trainer_img_width"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/back_arrow_width"
        android:background="@drawable/photo_drawable"/>



    <TextView
        android:id="@+id/trainer_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="@dimen/wetrain_txt_size"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/back_arrow_width"
        android:layout_marginLeft="@dimen/back_arrow_width"
        android:layout_marginRight="@dimen/back_arrow_width"
        android:textColor="@android:color/black"
        android:text="Mitch Brudy"/>

    <TextView
        android:id="@+id/trainer_avg_rating_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/wetrain_txt_size"
        android:textColor="@android:color/black"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/back_arrow_width"/>


    <Button
        android:id="@+id/trainer_contact_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:gravity="center"
        android:textSize="@dimen/wetrain_txt_size"
        android:textColor="@android:color/black"
        android:background="@drawable/schedule_btn_bg"
        android:layout_marginLeft="@dimen/back_arrow_width"
        android:layout_marginRight="@dimen/back_arrow_width"
        android:layout_marginTop="@dimen/back_arrow_width"
        android:textAllCaps="false"
        android:text="Contact Mitch"/>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/back_arrow_width"
            android:layout_marginRight="@dimen/back_arrow_width"
            android:layout_marginTop="@dimen/back_arrow_width"
            android:layout_marginBottom="@dimen/back_arrow_width"
            android:padding="3dp"
            android:background="@drawable/trainer_instructions_lyt_drawable">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/trainer_bio_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:textSize="@dimen/wetrain_txt_size"
                    android:textColor="@android:color/black"
                    android:text="@string/tell_ur_trainer_txt"/>


            </LinearLayout>

    </ScrollView>

</LinearLayout>